<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_round_channel"
        ></RelativeLayout>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/love" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/iv"
        android:text="来自话题:心理"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv"
        android:layout_below="@+id/iv"
        android:layout_marginTop="6dp"
        android:text="我是标题"
        android:textSize="17sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv"
        android:layout_below="@+id/tv_title"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:maxWidth="90dp"
        android:text="这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容这是内容"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_delete"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
      android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/gray"
        android:text="X" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl"
        android:layout_alignLeft="@+id/iv"
        android:layout_marginBottom="11dp"
        android:text="1.3K 赞同·52评论·关注问题"
        android:textColor="@color/gray"
        android:textSize="14sp" />


</RelativeLayout>